<% if @target.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@target.errors.count, "error") %>.
      <ul>
	    <% @target.errors.full_messages.each do |msg| %>
	      <li>* <%= msg %></li>
	    <% end %>
	    </ul>
    </div>
  </div>
<% end %>