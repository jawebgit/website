<% provide(:title , 'Chapter Officers - Add Position')%>

<div class="row">
	<div class="span12" align="left">
		<h3>Add Position</h3>
	</div>
	<div class="span6 offset4" align="left">
	  <%= render_errors(@officer)%>
	  <%= form_for(@officer, options={url: "#{positions_path}#create"}) do |pos| %>
		Position: <%= pos.text_field :position%><br>
		Position Name: <%= pos.text_field :name%><br>
		Current Holder: <%= pos.select( :uname, options_for_select(@brothers, selected: @officer.uname))%><br>
		Display on contacts Page: 
		  <%= pos.radio_button :disp, 1%>Yes
		  <%= pos.radio_button :disp, 0, checked: "checked"%>No<br><br>
		Contact For: <%= pos.text_field :contact%><br>
		
		<%= pos.submit "Add Position", class: "btn btn-primary" %>
	  <%end%>
	</div>
</div>