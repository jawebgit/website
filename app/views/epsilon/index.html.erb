<% provide(:title , "E Management")%>

<div class="row">
  <div class="span6" align="left">
  	<h2>Meal Management</h2>
  	<% @meals.each do | week , breakdown |%>
  	  <h3>Week of <%= week.strftime("%A, %B %e %Y")%></h3>
  	  <table class="table table-striped table-hover table-condensed">
	  <tbody>
		<% breakdown.each do |day , meals|%>
		  <tr>
			<td style='vertical-align:middle'><%= day.strftime("%A")%></td>
			<td style='vertical-align:middle'>
			  <% meals[0].each do | meal |%>
			    <%= "<br>".html_safe if meal.e_type == "dinner_0"%>
				<%= link_to disp_meal(meal), "#{epsilon_index_path}/#{meal.id}"%>
				<br>
				<%= "&nbsp;&nbsp;&nbsp;--#{meal.comment}<br>".html_safe unless meal.comment.empty?%>
			  <% end %>
			  <br>
			  <% meals[1].each do | meal |%>
			    <%= "<br>".html_safe if meal.e_type == "dinner_0"%>
				<%= link_to disp_meal(meal), "#{epsilon_index_path}/#{meal.id}"%>
				<br>
				<%= "&nbsp;&nbsp;&nbsp;--#{meal.comment}<br>".html_safe unless meal.comment.empty?%>
			  <% end %>
			</td>
		  </tr>
		<% end%>
	  </tbody>
	  </table>
  	<% end %>
  </div>
  <div class="span6">
  	<h2>E Management</h2>
  </div>
</div>