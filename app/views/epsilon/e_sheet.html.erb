<% provide(:title , "E Sheet")%>

<div class="row">
  <div class="span6" align="left">
  	<h3>E Sheet</h3>
	<table class="table table-striped table-hover table-condensed">
	  <tbody>
		<% @week_meals.each do |day , meals|%>
		  <tr>
			<td style='vertical-align:middle'><%= day.strftime("%A")%></td>
			<td style='vertical-align:middle'>
			  <% meals.each do | meal |%>
				<%= "</td><td style='vertical-align:middle'>".html_safe if meal.e_type == "dinner_0"%>
				<%= form_tag(e_sheet_path, :class => "e_sheet", method: :patch) do%>
				  <%= hidden_field_tag( "meal[date]", day)%>
				  <%= hidden_field_tag( "meal[time]", meal.e_type)%>
				  <%= get_meal_time(meal.e_type, meal.date)%>
				  <%= get_server(meal.uname, meal.e_type, meal.date)%>
				<% end %>
			  <%end%>
			</td>
		  </tr>
		<% end%>
	  </tbody>
	</table>
  </div>
  <div class="span6">
  	<h3>E Count</h3>
  	#TODO
  </div>
</div>