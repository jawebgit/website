<% provide(:title , "E Management - New Entry")%>

<div class="row">
  <div class="span12" align="left">
  	<h2>Meal Management - New Meal</h2>
  </div>
  <div class="span12">
  	<%= render_errors(@element)%>
  	<%= form_for(@element, options={url: "#{epsilon_index_path}#create"}) do |f|%>
  	  Date: <%= f.text_field :date%><br>
  	  Server: <%= f.select( :uname, options_for_select(@brothers, selected: @element.uname))%><br>
  	  E Value: <%= f.text_field :value%><br>
  	  Comment: <%= f.text_area :comment%><br>
  	  <%= f.submit("Add Meal", :class => "btn")%>
  	<% end %>
  </div>
</div>