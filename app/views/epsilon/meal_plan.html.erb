<% provide(:title , "Meal Plan Mgmt")%>

<div class="row">
  <div class="span12" align="left">
  	<h3>Meal Plan Management</h3>
  </div>
  <div class="span">
   <%= form_tag(meal_plan_path, method: :patch) do%>
    Add Alum:
    <%= select_tag("added", options_for_select(@alums))%>
    <%= submit_tag("Add")%>
   <% end %>
   <%= form_tag(meal_plan_path, method: :patch) do%>
  	<table class="table table-striped table-condensed">
  	 <thead>
  	  <tr>
  	  	<th>Name</th>
  	  	<th>Pledge Class</th>
  	  	<th>Add</th>
  	  	<th>Drop</th>
  	  </tr>
  	 </thead>
  	 <tbody>
  	  <% @brothers.each do | brother |%>
  	    <tr>
  	      <td><%= brother[:name]%></td>
  	      <td style="text-align:center;"><%= brother[:year]%></td>
  	      <td><%= button_tag( "Add to Meal Plan" , name: "add" , value: brother[:uname]) unless brother[:meal_plan]%></td>
  	      <td><%= button_tag( "Drop from Meal Plan" , name: "drop" , value: brother[:uname]) if brother[:meal_plan]%></td>
  	    </tr>
  	  <% end %>
  	 </tbody>
  	</table>
   <% end %>
  </div>
 </div>
