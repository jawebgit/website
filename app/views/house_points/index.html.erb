<% provide(:title , "Points Breakdown")%>

<div class="row">
	<div class="span12" align="left">
		<h3>Points Breakdown</h3>
		<table class="table table-striped table-hover table-condensed">
			<thead><tr>
				<th>Name</th>
				<th>Pledge Class</th>
				<% @brothers[0][:points].attributes.each do | type, val |%>
				  <th><%= print_type(type) unless type=="uname"%></th>
				<% end%>
				<th>Total</th>
			</tr></thead>
			<tbody>
			  <% @brothers.each do | usr |%>
			  <tr>
				<td><%= usr[:name]%></td>
				<td><%= usr[:p_class]%></td>
			  	<% usr[:points].attributes.each do | type, val |%>
			  	  <td><%= val unless type=="uname"%></td>
			  	<%end%>
			  	<td><%= usr[:points].total%></td>
			  </tr>
			  <%end%>
			</tbody>
		</table>
	</div>
</div>