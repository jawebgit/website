<% provide(:title , "Edit Point Award - for #{@name}")%>

<div class="row">
	<div class="span12" align="left">
		<h3><%= "Edit Point Award - for #{@name}"%></h3>
	</div>
	<div class="span6" align="left" style="font-weight:bold;">
	  <%= render_errors(@entry)%>
	  <%= form_for(@entry, options={url: "#{house_point_path}#update"}) do |pos| %>
		
		Name: <%= pos.select( :uname, options_for_select(@brothers, selected: @entry.uname))%><br>
		Points: <%= pos.text_field :value %><br>
		Comment/Reason: <%= pos.text_field :comment %><br>
		
		<%= pos.submit "Save Changes", class: "btn btn-primary" %>
		<%= link_to("Delete Entry" , house_point_path , method: :delete, 
		data: { confirm: delete_text(@name, @entry) }, :class => "btn")%>
	  <%end%>
	</div>
</div>