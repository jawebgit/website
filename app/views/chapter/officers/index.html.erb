<% provide(:title , 'Chapter Officers')%>

<div class="row">
	<div class="span12" align="left">
		<h3>
			Chapter Officers
			<!--<div class="btn-group pull-right">
				<= link_to "Update Officers" , "#{positions_updatem_path}"  , :class => "btn"%>
				<= link_to "Add Position" , "#{new_position_path}"  , :class => "btn"%>
			</div>-->
		</h3>
	</div>
	<div class="span12">
	  <div class="row">
		<ul id="sortable" class="ui-sortable">
		  <% @officers.each do | officer |%>
			<li class="ui-sortable-handle span6">
				<b><%= link_to officer[:title], "#{officers_path}/#{officer[:id]}/edit"%>:</b>
				<%= "#{officer[:full_name]} '#{officer[:year]}"%>
				<br><b>Contact For:</b> <%= officer[:contact]%>
				<br><b>Displayed:</b> <%= officer[:disp]?"Yes":"No"%>
			</li>
		  <% end%>
		</ul>
	  </div>
	  <%= button_to "Save Order", root_path, class: "pull-right btn btn-primary"%>
	</div>
</div>