<% provide(:title , 'Chapter Officers - Edit Position')%>

<div class="row">
	<div class="span12" align="left">
		<h3>Edit Position</h3>
	</div>
	<div class="span6 offset4" align="left" style="font-weight:bold;">
	  <%= render_errors(@officer)%>
	  <%= form_for(@officer, options={url: "#{officer_path}#update"}) do |pos| %>
		Name: <%= pos.text_field :name%><br>
		Title: <%= pos.text_field :title%><br>
		Current Holder: <%= officer_select(pos, @officer.dke_info_id)%><br><br>
		Email: <%= pos.text_field :email%>
		<!--Exec: 
		  <= pos.radio_button( :exec, 1, checked: ("checked" if @officer.exec))%>Yes
		  <= pos.radio_button( :exec, 0, checked: ("checked" unless @officer.exec))%>No<br>--></br>
		Display on contacts Page: 
		  <%= pos.radio_button( :disp, 1, checked: @officer.disp)%>Yes
		  <%= pos.radio_button( :disp, 0, checked: !@officer.disp)%>No<br><br>
		Contact For: <%= pos.text_area :contact%><br>
		
		<%= pos.submit "Save Changes", class: "btn btn-primary" %>
		<%= link_to("Delete Position" , officer_path , method: :delete, 
					data: { confirm: "Are you sure you would like to delete #{@officer.title}?" }, :class => "btn")%>
	  <%end%>
	</div>
</div>