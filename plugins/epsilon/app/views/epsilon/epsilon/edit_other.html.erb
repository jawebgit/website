<% provide(:title , "E Management")%>

<div class="row">
  <div class="span12" align="left">
  	<h2>Meal Management</h2>
  </div>
  <div class="span12">
  	<%= render_errors(@element)%>
  	<%= form_for(@element, options={url: "#{main_app.epsilon_path}#update"}) do |f|%>
  	  Date: <%= f.text_field :date, class: "datepicker"%><br>
  	  <div>Server: <%= server_select(f, @brothers, @element.dke_info_id)%></div><br>
  	  E Value: <%= f.text_field :value%><br>
  	  Comment: <%= f.text_area :comment%><br>
  	  <%= f.submit("Save Changes" , :class => "btn")%>
  	  <%= link_to("Delete Meal" , main_app.epsilon_path , method: :delete,
  	  data: { confirm: "Are you sure you would like to delete this meal?" }, :class => "btn")%>
  	<% end %>
  </div>
</div>
<script>
 	$( ".datepicker" ).datepicker();
</script>
