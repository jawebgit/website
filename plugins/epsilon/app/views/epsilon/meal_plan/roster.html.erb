<% provide(:title , "Meal Plan Roster Management")%>

<div class="row">
	<div class="span12">
		<h2>
			Meal Plan Roster Management
		</h2>
		<div class="row">
			<div class="span12">
				<table class="table table-striped table-hover table-condensed">
				  <thead>
				  <tr>
					<th>Last Name</th>
					<th>First Name</th>
					<th>MIT Class</th>
					<th>In House</th>
					<th>Meal Plan</th>
					<th></th>
					<th></th>
				   </tr>
				  </thead>
				  <tbody>
				   <tr class="filter-header">
				   	  <th style="background-color:#000041;"></th>
					  <th style="background-color:#000041;"></th>
					  <th style="background-color:#000041;"><%= class_select_filter%></th>
					  <th style="background-color:#000041;"><%= house_select_filter%></th>
					  <th style="background-color:#000041;"><%= meal_plan_select_filter%></th>
					  <th style="background-color:#000041;"><%= button_tag("Filter", class: "meal_plan_filter_btn")%></th>
				    </tr>
				   </tbody>
				   <tbody id="user_body">
				   <% @brothers.each do | user | %>
				    <tr>
				    	<td><%= user[:last_name]%></td>
					    <td><%= user[:first_name]%></td>
						<td><%= user[:year]%></td>
						<td><%= user[:residence]%></td>
						<td><%= user[:meal_plan]%></td>
						<td></td>
					</tr>
				   <% end %>
				  </tbody>
				</table>
			</div>
		</div>
	</div>
</div>